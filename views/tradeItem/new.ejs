

<%- include('../partials/header.ejs')%>

    <div class="container" style="color:rgb(52, 163, 52)">
        <h1 >Create Item</h1>
    </div>
    <div class="container">
        <form method="POST" action="/trades" class="form-horizontal">
            <div class="form-group has-success">
                <label class="control-label col-sm-2" for="glastp">Name</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" id="name" name="name" placeholder="name">
                </div>
            </div>

            <div class="form-group has-success">
                <label class="control-label col-sm-2" for="cataid">Category</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" id="category" name="category" placeholder="category">
                </div>
            </div>

            <div class="form-group has-success">
                <label class="control-label col-sm-2" for="cataid">Details</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" id="details" name="details" placeholder="details" required minlength="10">
                </div>
            </div>

            <div class="form-group has-success">
                <label class="control-label col-sm-2" for="cataid">Price</label>
                <div class="col-sm-5">
                    <input class="form-control" type="text" id="price" name="price" placeholder="price">
                </div>
            </div>

            <div class="create-button-container">
                <button type="submit" class="create-item-button">
                    Create
                </button>
            </div>
        </form>
    </div>




    <%- include('../partials/footer.ejs')%>