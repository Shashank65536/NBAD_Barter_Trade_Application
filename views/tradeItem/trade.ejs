<%- include('../partials/header.ejs')%>


    <div id = "card-container">
        <%console.log("In ejs template = ",items.details);%>
        <%if(items.length > 1){
            console.log("In ejs template = ",items.length);
            for (var i = 0; i < items.length; i++) {%>
                <div class = "card">
                    <img id = "card-image" src = "<%= items[i].image %>" alt = "logo">
                    <h1><%= items.name%></h1>
                    <p class="price">$<%= items[i].price%></p>
                    <p><%= items[i].details %></p>
                    <p>
                    <button>
                        <a href="http://localhost:3000/trades/showTrade/<%= items[i].id%>">
                            Start Trading
                        </a>
                    </button>
                </p>
                </div>

             <%} 
        }else{%>
            
            <div class = "card">
                <img id = "card-image" src = "<%= items[0].image %>" alt = "logo">
                <h1><%= items[0].name%></h1>
                <p class="price">$<%= items[0].price%></p>
                <p><%= items[0].details %></p>
                <p>
                    <button>
                        <a href="http://localhost:3000/trades/showTrade/<%= items[0].id%>">
                            Start Trading
                        </a>
                    </button>
                </p>
            </div>
        <%}%>

    </div>

   </div>



